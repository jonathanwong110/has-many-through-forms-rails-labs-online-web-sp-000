<h1> <%= @post.title %> </h1>
<h1> <%= @post.content %> </h1>
<% @post.categories.each do |category| %>
  <%= category.name %>
<% end %>
<% @post.comments.each do |comment| %>
  <%= comment.content %>
<% end %>

<%= form_for @comment do |f| %>
  <%= f.label "Content" %>
  <%= f.text_area :comment_content %>
  <%= select_tag 'comment_user_id', options_for_select(@users.collect |u| [u.username, u.id]) %>
  <%= f.submit %>
<% end %>

<% @post.users.uniq.each do |user| %>
  <%= link_to user.username, user_path(user) %>
<% end %>